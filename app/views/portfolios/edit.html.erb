<h1>Edit this portfolio item</h1>

<%= form_with model: @portfolio_item do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %> <br>

    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %><br>
    
    <%= form.label :body %>
    <%= form.text_area :body, size: "60x10" %><br>
    
    <%= form.submit %>
<% end %>